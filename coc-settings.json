{
  "languageserver": {
  "vimls": {
    "command": "vim-language-server",
    "args": ["--stdio"],
    "initializationOptions": {
      "isNeovim": true, 
      "iskeyword": "@,48-57,_,192-255,-#",       
      "vimruntime": "",
      "runtimepath": "",                   
      "diagnostic": {
        "enable": true
      },
      "indexes": {
        "runtimepath": true,      
        "gap": 100,               
        "count": 3,                
        "projectRootPatterns" : ["strange-root-pattern", ".git", "autoload", "plugin"] 
      },
      "suggest": {
        "fromVimruntime": true,   
        "fromRuntimepath": false        }
    },
    "filetypes": [ "vim" ]
  }
}
}
